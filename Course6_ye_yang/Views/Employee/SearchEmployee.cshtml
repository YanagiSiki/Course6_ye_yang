            </td>
        </tr>
        <tr>
            <td>職稱</td>
            <td colspan="3">
                <input id="Title" class="Title" value="@arg.Title" name="Title" />
                @*@Html.DropDownListFor(model => model.Title, (List<SelectListItem>)ViewBag.Type, String.Empty, new { id = "SelectTitle" })*@

            </td>
        </tr>
        <tr>
            <td>任職日期</td>
