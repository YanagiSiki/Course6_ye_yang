                arg = new Course6_ye_yang_Model.Employee.EmployeeSearchArg();
            }
        }
        <tr>
            <td>員工編號</td>
            <td colspan="3">
                <input type="text" id="EmployeeId" class="EmployeeId digit" value="@arg.EmployeeId" name="EmployeeId" />
