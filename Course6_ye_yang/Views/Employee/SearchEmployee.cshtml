            </td>
        </tr>
        <tr>
            <td> </td>
            <td colspan="3">
                <input type="submit" id="searchbtn" value="查詢" />
                <input type="button" id="clearbtn" value="清除">
                <input type="button" id="newbtn" value="新增員工">
            </td>
        </tr>

    </table>
}


