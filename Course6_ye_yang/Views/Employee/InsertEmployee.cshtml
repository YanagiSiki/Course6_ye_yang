        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="存檔" id="save" />
                <input type="button" id="backbtn" value="回上一頁">
            </td>
        </tr>
        
    </table>
    <div>
        @{
    var DropdownType = ViewBag.DropdownType;
    <input id="DropdownType" type="hidden" value="@DropdownType" />
    var DropdownCountry = ViewBag.DropdownCountry;
    <input id="DropdownCountry" type="hidden" value="@DropdownCountry" />
    var DropdownCity = ViewBag.DropdownCity;
    <input id="DropdownCity" type="hidden" value="@DropdownCity" />
    var DropdownGender = ViewBag.DropdownGender;
    <input id="DropdownGender" type="hidden" value="@DropdownGender" />
    var DropdownManagerID = ViewBag.DropdownManagerID;
    <input id="DropdownManagerID" type="hidden" value="@DropdownManagerID" />
}
    </div>
}
