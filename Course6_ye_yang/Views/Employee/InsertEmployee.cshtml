                @Html.ValidationMessageFor(model => model.MonthlyPayment)*@
                <input type="number" id="MonthlyPayment" class="MonthlyPayment digit" value="@emp.MonthlyPayment" name="MonthlyPayment" />
            </td>
        </tr>
        <tr>
            <td>年薪</td>
            <td colspan="3">
                @*@Html.TextBoxFor(model => model.YearlyPayment, new { @readonly = "readonly", @class = "digit" })
                @Html.ValidationMessageFor(model => model.YearlyPayment)*@
                <input type="text" id="YearlyPayment" class="YearlyPayment digit" value="@emp.YearlyPayment" name="YearlyPayment" />
