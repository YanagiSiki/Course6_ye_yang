@model Course6_ye_yang_Model.Employee.Employee
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script src="~/Scripts/Employee/InsertEmployee.js"></script>
<h2>新增員工</h2>

@using (Html.BeginForm("InsertEmployee", "Employee", FormMethod.Post, new { id = "Form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
        @{
    Course6_ye_yang_Model.Employee.Employee emp;
    if (ViewBag.ViewArg != null)
    {
        emp = (Course6_ye_yang_Model.Employee.Employee)ViewBag.ViewArg;
    }
    else
    {
        emp = new Course6_ye_yang_Model.Employee.Employee();
    }
        }
    </div>
    <table class="table table-bordered">
        <tr>
            <td><lebel class="sign">*</lebel>姓名(First Name)</td>
            <td colspan="3">
                @*@Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)*@                
                <input type="text" id="FirstName" class="FirstName k-textbox" value="@emp.FirstName" name="FirstName" required/>
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>姓名(Last Name)</td>
            <td colspan="3">
                @*@Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)*@
                <input type="text" id="LastName" class="LastName k-textbox" value="@emp.LastName" name="LastName" required />
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>職稱</td>
            <td colspan="3">
                @*@Html.DropDownListFor(model => model.Title, (List<SelectListItem>)ViewBag.Type, String.Empty, new { id = "SelectTitle" })
                @Html.ValidationMessageFor(model => model.Title)*@
                <input id="Title" class="Title" value="@emp.Title" name="Title" required />
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>稱謂</td>
            <td colspan="3">
                @*@Html.EditorFor(model => model.TitleOfCourtesy)
                @Html.ValidationMessageFor(model => model.TitleOfCourtesy)*@
                <input type="text" id="TitleOfCourtesy" class="TitleOfCourtesy" value="@emp.TitleOfCourtesy" name="TitleOfCourtesy" required />
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>任職日期</td>
            <td colspan="3">
                <input id="HireDate" type="date" name="HireDate" value="@emp.HireDate" required/>
                @*@Html.ValidationMessageFor(model => model.HireDate)*@
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>生日</td>
            <td colspan="3">
                <input id="BirthDate" type="date" name="BirthDate" value="@emp.BirthDate" required />
                @*@Html.ValidationMessageFor(model => model.BirthDate)*@
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>國家</td>
            <td colspan="3">
                @*@Html.DropDownListFor(model => model.Country, (List<SelectListItem>)ViewBag.Country, String.Empty, new { id = "SelectCountry" })
                @Html.ValidationMessageFor(model => model.Country)*@
                <input id="Country" class="Country" value="@emp.Country" name="Country" required />
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>城市</td>
            <td colspan="3">
                @*@Html.DropDownListFor(model => model.City, (List<SelectListItem>)ViewBag.City, String.Empty, new { id = "SelectCity" })
                @Html.ValidationMessageFor(model => model.City)*@
                <input id="City" class="City" value="@emp.City" name="City" required />
            </td>
        </tr>
        <tr>
            <td><lebel class="sign">*</lebel>地址</td>
            <td colspan="3">
                @*@Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)*@
                <input type="text" id="Address" class="Address" value="@emp.Address" name="Address" required />
            </td>
        </tr>
        <tr>
